<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cloud.dao.UserDao">
	
	<sql id="sqlId">
		user_id,username,password,email,register_time
	</sql>
	<insert id="register" parameterType="User">
		INSERT INTO cloud_user(username,password,email,register_time) 
		VALUES (#{username},#{password},#{email},#{register_time})
	</insert>
	<!-- 查询用户和密码进行登录 -->
	<select id="login" resultType="User" parameterType="String">

		select * from cloud_user where username = #{username}

	</select>
	<!-- 用户展示 -->
	<select id="showUser" resultType="User">
		select <include refid="sqlId"></include> from
		cloud_user
	</select>
	<!-- 查询一条数据 -->
	<select id="selectOne" parameterType="Integer" resultType="User">
		select * from cloud_user where user_id=#{user_id}
	</select>
	<!-- 修改用户信息 -->
	<update id="updateUser" parameterType="User">
		update cloud_user set username=#{username},password=#{password},email=#{email},register_time=#{register_time}
		where user_id=#{user_id}
	</update>
	<delete id="deleteUser" parameterType="Integer">
		delete from
		cloud_user where user_id=#{user_id}
	</delete>
</mapper>